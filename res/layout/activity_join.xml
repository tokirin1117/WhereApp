<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
     >
<ScrollView
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    >
    <LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/join_email"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:layout_marginTop="20dip"
        android:hint="E-mail"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <EditText
        android:id="@+id/join_pwd"
        android:layout_width="300dip"
        android:password="true"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:layout_marginTop="20dip"
        android:hint="비밀번호"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <EditText
        android:id="@+id/join_pwd_confirm"
        android:layout_width="300dip"
        android:password="true"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:layout_marginTop="20dip"
        android:hint="비밀번호 확인"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/join_residence"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:layout_marginTop="20dip"
        android:hint="거주지 등록"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity = "center"
        >
        
    <Button
        android:id="@+id/join_favor1"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:hint="선호하는 답변 지역" />
    
    <Button
        android:id="@+id/join_favor2"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:hint="선호하는 답변 지역" />
    
    <Button
        android:id="@+id/join_favor3"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:hint="선호하는 답변 지역" />
    
    </LinearLayout>
    
        <TextView
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		android:layout_marginTop="20dip"
      		android:text = "선호하는 답변 유형"
      		android:textColor="#ff000000"
      		android:layout_gravity = "center"
      		android:textAppearance="?android:attr/textAppearanceMedium"
      		/>
    
    <RelativeLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/join_check_layout"
        >
        
        <CheckBox
            android:id="@+id/join_check1"
            android:layout_marginLeft="30dip"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		/>
            
        <TextView
            android:layout_toRightOf="@+id/join_check1"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		android:layout_marginTop="5dip"
      		android:text = "지역정보"
      		android:textColor="#ff000000"
      		android:textAppearance="?android:attr/textAppearanceMedium"
      		/>
        
        <CheckBox
            android:id="@+id/join_check2"
            android:layout_toRightOf="@+id/join_check1"
            android:layout_marginLeft="100dip"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		/>
            
        <TextView
            android:layout_toRightOf="@+id/join_check2"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		android:layout_marginTop="5dip"
      		android:text = "맛집추천"
      		android:textColor="#ff000000"
      		android:textAppearance="?android:attr/textAppearanceMedium"
      		/>
            
        
        
        
        <CheckBox
            android:id="@+id/join_check3"
            android:layout_below="@+id/join_check1"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="10dip"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		/>
            
        <TextView
            android:layout_toRightOf="@+id/join_check3"
            android:layout_below="@+id/join_check1"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		android:layout_marginTop="15dip"
      		android:text = "데이트코스"
      		android:textColor="#ff000000"
      		android:textAppearance="?android:attr/textAppearanceMedium"
      		/>
        
        <CheckBox
            android:id="@+id/join_check4"
            android:layout_toRightOf="@+id/join_check3"
            android:layout_below="@+id/join_check1"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="100dip"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		/>
            
        <TextView
            android:layout_toRightOf="@+id/join_check4"
            android:layout_below="@+id/join_check1"
        	android:layout_width = "wrap_content"
      		android:layout_height = "wrap_content"
      		android:layout_marginTop="15dip"
      		android:text = "대중교통"
      		android:textColor="#ff000000"
      		android:textAppearance="?android:attr/textAppearanceMedium"
      		/>
    </RelativeLayout>
        
    <Button
        android:id="@+id/join_submit"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:layout_marginTop="20dip"
        android:hint="회원가입"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</ScrollView>
</LinearLayout>