<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/qa_timestamp"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="#ff999999"
        android:textColor="#ffffffff"
        android:text="13년 9월 10일 목요일"
        android:gravity="center"
        />
        
    
    <TextView 
        android:id="@+id/qa_question"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dip"
        android:background="@drawable/bubble_receive"
        android:text="Sample Question~~~?"
        />
    
    <TextView 
        android:id="@+id/qa_answer"
        android:layout_gravity="right"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dip"
        android:background="@drawable/bubble_send"
        android:text="Sample Answer~~~~~~~~~~~~~~~~~~"
        />
    

</LinearLayout>
